@model CloudProjectCore.Models.ViewModels.UploadModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>@Model.Message</p>
<form asp-action="UploadPost" enctype="multipart/form-data" method="post" class="mt-4">
    <div class="form-group">
        <dl>
            <dt>
                <label>Select an image to be uploaded</label>
            </dt>
            <br />
            <dd>
                <input asp-for="@Model.File" type="file">
                <span asp-validation-for="@Model.File"></span>
            </dd>
        </dl>
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
</form>
